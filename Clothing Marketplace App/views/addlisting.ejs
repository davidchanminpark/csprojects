<head>
  <title>Homepage</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <style>
    body {
      color: black;
      opacity: 80%;
      /* background-image: linear-gradient(darkgreen, green, lightgreen); */
      background-image:url("https://i.imgur.com/qbk0byw.jpg");
      height: 100%;
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
    }

    li {float: left;
      list-style-type:none;
    }
    #main{
      color: white;
    }
  </style>
</head>
<body>
  <div class="row container-fluid">
    <div class="col-md-2 pt-3 ">
      <h3 class="text-left"><%= name %></h3>
    </div>
    <div class="col-md-8">
    </div>
    <div class="text-right col-md-2 pt-3">
      <form action="/logout?_method=DELETE" method="POST">
        <button class="btn btn-outline-dark" type="submit">Log Out</button>
      </form>
    </div>
  </div>
  <div class="row container-fluid">
    <div class="col-md-1">
    </div>

    <div class="col-md-10 text-center mb-1" id="main" style="background-image:url('https://i.imgur.com/Mh4VUDc.jpg')">
      <nav class="navbar navbar-light rounded m-1 p-1">
        <li class="nav-item">
          <a class="nav-link active text-white" href="/homepage">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/addlisting">Add Clothing</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/viewanalytics">Analytics</a>
        </li>
      </nav>
      <hr>
      <h3 class="text-left">add listing</h3>
      <hr>
      <form action="/createListing" method="post">
        <div class="form-group">
          <label for="title">Name</label>
          <input name="title" id="title" class="form-control" placeholder="Enter name of clothing">
        </div>
        <div class="form-row">
          <div class="form-group col-md-4">
            <label for="gender">Gender</label>
            <select name="gender" id="gender" class="form-control">
              <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
          </div>
          <div class="form-group col-md-4">
            <label for="size">Size</label>
            <input name="size" id="size" class="form-control" placeholder="Enter size of clothing">
          </div>
          <div class="form-group col-md-4">
            <label for="type">Gender</label>
            <select name="typeClothing" id="type" class="form-control">
              <option value="tshirt">T-Shirt</option>
              <option value="sweater">Sweater</option>
              <option value="jacket">Jacket</option>
              <option value="coat">Coat</option>
              <option value="jeans">Jeans</option>
              <option value="shoes">Shoes</option>
              <option value="skirt">Skirt</option>
              <option value="sweatpants">Sweatpants</option>
            </select>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="brand">Brand</label>
            <input name="brand" id="brand" class="form-control" placeholder="Enter brand of clothing">
          </div>
          <div class="form-group col-md-6">
            <label for="price">Price</label>
            <input name="price" id="price" class="form-control" placeholder="Enter price of clothing (ex: 19.99)">
          </div>
        </div>
        <div class="form-group">
          <label for="keywords">Keywords</label>
          <textarea name="keywords"class="form-control" rows="4" cols="50" id="bio" placeholder="Write keywords for your clothing and separate by comma (ex: kw1,kw2,kw3)"></textarea>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-outline-light">Add to <%= name %>'s store</button>
        </div>
      </form>

      <div class="col-md-1">
      </div>

    </div>
  </div>

</body>
</html>
